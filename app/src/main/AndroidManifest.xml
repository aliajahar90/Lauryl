<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="versatile.project.lauryl">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".application.MyApplication">

        <activity android:name=".screens.ResetPasswordScreen"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".screens.ForgotPasswordScreen"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".screens.OTPVerificationScreen"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".screens.HomeScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".screens.IntroScreen"></activity>
        <activity android:name=".screens.SignUpOrLoginScreen"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".screens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>