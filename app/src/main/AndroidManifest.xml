<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="versatile.project.lauryl">

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".base.BaseActivity"></activity>
        <activity
            android:name=".screens.ResetPasswordScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.ForgotPasswordScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.OTPVerificationScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.HomeScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".screens.IntroScreen" />
        <activity
            android:name=".screens.SignUpOrLoginScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".screens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>