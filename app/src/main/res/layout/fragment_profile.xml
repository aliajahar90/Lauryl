<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/imgName"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_name">

                </androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    android:gravity="center_vertical"
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgName"
                    android:text=""
                    android:textSize="@dimen/sp_14">

                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_color"></View>

            <RelativeLayout
                android:id="@+id/rlNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgNumber"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_number"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    android:id="@+id/txtNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgNumber"
                    android:text=""
                    android:textSize="@dimen/sp_14">

                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_color"></View>

            <RelativeLayout
                android:id="@+id/rlChPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgChPassword"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_ch_password"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    android:id="@+id/txtChPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgChPassword"
                    android:text="@string/change_password"
                    android:textSize="@dimen/sp_14">

                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_color"></View>

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgAddress"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_address"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgAddress"
                    android:text="@string/manage_address"
                    android:textSize="@dimen/sp_14">

                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_color"></View>

            <RelativeLayout
                android:id="@+id/rlLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLogout"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_logout"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    android:id="@+id/txtLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/imgLogout"
                    android:text="@string/logout"
                    android:textSize="@dimen/sp_14">

                </androidx.appcompat.widget.AppCompatTextView>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_color"></View>
        </LinearLayout>

            <LinearLayout
                android:paddingBottom="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/grey_color"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="Powered by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatTextView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:letterSpacing=".4"
                    android:textColor="@color/dark_grey"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="VERSATILE COMMERCE "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
               </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>