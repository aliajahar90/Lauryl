<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:gravity="center"
        android:elevation="@dimen/dp_10"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_30"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Sri ram nagar colony"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Sri ram nagar colony"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="3dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/location_white_icon"
                android:drawablePadding="@dimen/dp_10"
                android:drawableTint="@color/orange"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/dp_10"
                android:padding="3dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/orange_bckgrnd_round_corners_bckgrnd"
                android:text="CHANGE"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/confirm_location_btn"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="3dp"
            android:paddingEnd="@dimen/dp_20"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/blue_bckgrnd_round_corners_bckgrnd"
            android:text="CONFIRM LOCATION"
            />
    </LinearLayout>

</RelativeLayout>